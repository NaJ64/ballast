{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch 'Ballast.Client.Web' (Node.js)",
            "cwd": "${workspaceFolder}/Ballast.Client.Web",
            "program": "${workspaceFolder}/Ballast.Client.Web/server.js"
        },
        {
            "name": "Launch 'Ballast.Server' (.NET Core)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/Ballast.Server/bin/Debug/netcoreapp2.1/Ballast.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Ballast.Server",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": false,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
    ]
}