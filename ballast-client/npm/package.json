{
  "name": "ballast-client",
  "version": "1.0.0",
  "description": "Client library for connecting to Ballast server",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run compile",
    "clean": "node ./node_modules/rimraf/bin \"lib\"",
    "compile": "npm run clean && npm run copy && node ./node_modules/typescript/lib/tsc --build",
    "compile-watch": "npm run clean && npm run copy && node ./node_modules/typescript/lib/tsc --build --watch",
    "copy": "npm run copy:js",
    "copy:js": "node ./node_modules/cpx/bin \"src/**/*.{js,json}\" \"lib\"",
    "prepare": "npm run build",
    "test": "node ./node_modules/jest/bin/jest",
    "test-single": "node ./node_modules/jest/bin/jest -- --args",
    "test-full": "npm run build && npm test"
  },
  "keywords": [
    "ballast"
  ],
  "author": "NaJ64 <njudice@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "ballast-core": "file:../../ballast-core/npm",
    "cpx": "^1.5.0",
    "inversify": "^5.0.1",
    "jest": "^24.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.1"
  },
  "peerDependencies": {
    "ballast-core": "file:../../ballast-core/npm",
    "inversify": "^5.0.1",
    "reflect-metadata": "^0.1.13"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "src/.*\\.test\\.(jsx?|tsx?)$"
  },
  "dependencies": {
    "@aspnet/signalr": "^1.1.0"
  }
}
