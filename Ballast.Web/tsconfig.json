{
    "compileOnSave": true,
    "compilerOptions": {
      "baseUrl": ".",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "lib": [ 
        "es6",
        "dom"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": "src/Client",
      "sourceMap": true,
      "strict": true,
      "target": "es5"
    },
    "include": [
      "src/Client/**/*.ts"
    ],
    "exclude": [
      "dist/**/*.ts",
      "src/Client/**/*.test.ts"
    ]
  }