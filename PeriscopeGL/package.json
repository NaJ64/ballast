{
  "name": "periscope-gl",
  "version": "1.0.0",
  "description": "WebGL graphics rendering system for Ballast",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "test": "tsc && jest"
  },
  "keywords": [
    "webgl"
  ],
  "author": "NaJ64 <njudice@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.2",
    "typescript": "^2.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [ "/node_modules/", "/dist/" ],
    "testRegex": "src/.*\\.test\\.(jsx?|tsx?)$"
