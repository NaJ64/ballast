{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [ 
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src/typescript",
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "src/typescript/**/*.ts"
  ],
  "exclude": [
    "dist/**/*.ts",
    "src/typescript/**/*.test.ts"
  ]
}