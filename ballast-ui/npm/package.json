{
  "name": "ballast-ui",
  "version": "1.0.0",
  "description": "Client HTML and DOM/Canvas-based UI for Ballast",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "gulp",
    "prepare": "npm run build",
    "test": "node ./node_modules/jest/bin/jest --passWithNoTests",
    "test-single": "node ./node_modules/jest/bin/jest -- --args"
  },
  "keywords": [
    "ballast"
  ],
  "author": "NaJ64 <njudice@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@wildpeaks/three-webpack-plugin": "^2.0.0",
    "ballast-client": "^1.0.0",
    "ballast-core": "^1.0.0",
    "del": "^5.0.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-filter": "^6.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-typescript": "^5.0.1",
    "inversify": "^5.0.1",
    "jest": "^24.8.0",
    "reflect-metadata": "^0.1.13",
    "three": "^0.104.0",
    "throwback": "^4.0.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "tslib": "^1.10.0",
    "typescript": "^3.4.5",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
